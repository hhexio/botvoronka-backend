generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  telegramId  String   @unique
  username    String?
  firstName   String?
  lastName    String?
  avatarUrl   String?
  email       String?
  plan        Plan     @default(FREE)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  funnels      Funnel[]
  subscription Subscription?
  payments     Payment[]
}

model Funnel {
  id          String       @id @default(cuid())
  name        String
  description String?
  status      FunnelStatus @default(DRAFT)
  userId      String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  nodes       Node[]
  payments    Payment[]
  sessions    FunnelSession[]
}

model Node {
  id          String   @id @default(cuid())
  type        NodeType
  name        String
  content     Json?
  position    Json     @default("{\"x\": 0, \"y\": 0}")
  funnelId    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  funnel      Funnel   @relation(fields: [funnelId], references: [id], onDelete: Cascade)
}

enum Plan {
  FREE
  PRO
}

enum FunnelStatus {
  DRAFT
  ACTIVE
  PAUSED
}

enum NodeType {
  MESSAGE
  BUTTON
  CONDITION
  DELAY
  PAYMENT
}

model Subscription {
  id        String    @id @default(cuid())
  userId    String    @unique
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan      Plan      @default(FREE)
  status    SubStatus @default(ACTIVE)
  expiresAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Payment {
  id              String        @id @default(cuid())
  oderId          String        @unique // ID платежа от ЮKassa
  userId          String
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  amount          Int           // В копейках (4990.00 = 499000)
  currency        String        @default("RUB")
  status          PaymentStatus @default(PENDING)
  description     String?
  paymentMethod   String?       // bank_card, yoo_money, etc
  confirmationUrl String?       // URL для оплаты
  funnelId        String?       // Если платёж за прохождение воронки
  funnel          Funnel?       @relation(fields: [funnelId], references: [id])
  metadata        Json?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}

model FunnelSession {
  id            String        @id @default(cuid())
  visitorId     String        // Telegram user ID посетителя
  visitorName   String?       // Имя из Telegram
  funnelId      String
  funnel        Funnel        @relation(fields: [funnelId], references: [id], onDelete: Cascade)
  currentNodeId String?       // Текущий узел
  status        SessionStatus @default(ACTIVE)
  startedAt     DateTime      @default(now())
  completedAt   DateTime?
  paidAt        DateTime?
  paidAmount    Int?          // Сумма оплаты если была
  data          Json?         // Данные собранные в процессе
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([funnelId])
  @@index([visitorId])
}

enum SubStatus {
  ACTIVE
  CANCELLED
  EXPIRED
  TRIAL
}

enum PaymentStatus {
  PENDING
  WAITING_FOR_CAPTURE
  SUCCEEDED
  CANCELLED
  REFUNDED
}

enum SessionStatus {
  ACTIVE
  COMPLETED
  ABANDONED
  PAID
}